<%= render 'shared/navbar' %>
<div class="m-4">
  <div id="dish" class="cards">
    <% @dishes.each do |dish| %>
      <% if dish.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(255,198,89,0.2),rgba(255,198,89,0.2)), url(<%= rails_blob_url(dish.photo) %>)" >
          <%= link_to "#{dish.name.upcase}", dish_path(dish), class: "btn btn-dark border-circle" %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(255,198,89,0.2),rgba(255,198,89,0.2)), url('https://images.unsplash.com/photo-1570598912132-0ba1dc952b7d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80')">
          <%= link_to "#{dish.name.upcase}", dish_path(dish), class: "btn btn-dark border-circle" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="welcome-button-div">
  <%= link_to new_dish_path do %>
    <button type="button" class="btn btn-primary">YUMMY</button>
  <% end %>
</div>
